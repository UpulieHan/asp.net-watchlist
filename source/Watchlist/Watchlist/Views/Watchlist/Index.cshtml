@model IEnumerable<Watchlist.Models.MovieViewModel>

@{
    ViewData["Title"] = "Index";
}
<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <partial name="_LoginPartial" />
        <div class="container-fluid mt-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">My Wactchlist</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MovieId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Year)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InWatchlist)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Watched)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rating)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MovieId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Year)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InWatchlist)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Watched)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rating)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




















